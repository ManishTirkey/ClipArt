{
  "name": "clipart",
  "version": "1.0.0",
  "description": "ClipArt is a lightweight, always-ready clipboard companion that mirrors the Windows clipboard and adds a fast, keyboard-driven UI. It shows your last copies, lets you paste the top 10 instantly with global hotkeys, and stays fixed at the bottom-right on every monitor.",
  "main": "dist/main.js",
  "scripts": {
    "prebuild": "npm run icons",
    "build": "tsc && node ./scripts/copy-static.cjs",
    "dev": "concurrently \"tsc -w\" \"wait-on dist/preload.js && node ./scripts/copy-static.cjs --watch\" \"electron .\"",
    "start": "electron .",
    "typecheck": "tsc --noEmit",
    "icons": "node ./scripts/icon-build.cjs",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^24.3.1",
    "concurrently": "^9.2.1",
    "electron": "^38.0.0",
    "electron-builder": "^26.0.12",
    "sharp": "^0.33.5",
    "to-ico": "^1.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "wait-on": "^8.0.4"
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  }
}
